# Generated by chef for <%= node[:fqdn] %>. Do not modify by hand
#
server {
    server_name <%= @server_name %><% @server_aliases.each do |server_alias| %> <%=server_alias%><% end %>;
    root <%= @directory %>; 
    index index.html index.htm index.php

    <% if @custom_config then  %>
    include <%= @custom_config %>
    <% end %>;

    <% if !@custom_logs then %>
    access_log <%= "#{node['nginx']['log_dir']}/#{@server_name}/access/access.log" %>  
    error_log <%= "#{node['nginx']['log_dir']}/#{@server_name}/error/error.log" %>
    <% end %>
}
